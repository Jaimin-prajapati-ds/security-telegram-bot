# Security Telegram Bot - Environment Configuration
# Copy this file to .env and update with your actual values

# Telegram Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
ADMIN_IDS=123456789,987654321  # Comma-separated admin user IDs

# Database Configuration (optional)
DATABASE_URL=sqlite:///security_bot.db
DATABASE_ECHO=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Security Monitoring Paths
SSH_LOG=/var/log/auth.log
WEB_LOG=/var/log/apache2/access.log
APP_LOG=/var/log/app/app.log

# Alert Configuration
ALERT_THRESHOLD_SSH_FAILED_LOGIN=5
ALERT_THRESHOLD_RATE_LIMIT=100
ALERT_COOLDOWN_MINUTES=5

# Webhook Configuration (optional)
WEBHOOK_URL=
WEBHOOK_PORT=8443

# OpenAI Configuration (optional, for AI threat analysis)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Deployment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
